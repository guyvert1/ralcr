class RCNotification {
	
	public var name :String;
	public var functionToCall :Dynamic;
	public var args :Array<Dynamic>;
	 
	
	public function new (name:String, functionToCall:Dynamic, ?args:Array<Dynamic>) {
		this.name = name;
		this.functionToCall = functionToCall;
		this.args = args;
	}
	
	public function toString () :String {
		return "[RCNotification with name: '"+name+"', functionToCall: "+functionToCall+/*", args: "+args+*/"]";
	}
}

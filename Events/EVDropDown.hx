class DropDownEvent extends flash.events.Event {
	
	inline public static var CHANGE :String = "change";
	inline public static var CLICK :String = "dropdown_click";
	inline public static var PUSH :String = "push";
	inline public static var REMOVE :String = "remove";
	
	public var label :String;
	public var value :Float;
	
	
	public function new (type:String, label:String, ?bubbles:Bool=false, ?cancelable:Bool=false) {
		super ( type, bubbles, cancelable );
		
		this.label = label;
	}
}
